{
  "name": "copy-code",
  "displayName": "copy-code",
  "description": "Copy content from files, including all open files",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/nshkrdotcom/vscode-extensions/copy-code"
  },
  "publisher": "nshkrdotcom",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onCommand:copy-code.copyAllFiles"],
  "main": "./out/extension.js",
  "icon": "resources/icon.png",
  "contributes": {
    "commands": [{
      "command": "copy-code.copyAllFiles",
      "title": "Copy All Files Content",
      "icon": "$(files)"
    }],
    "viewsContainers": {
      "activitybar": [{
        "id": "copy-code-sidebar",
        "title": "Code Copy",
        "icon": "resources/icon.svg"
      }]
    },
    "views": {
      "copy-code-sidebar": [{
        "id": "copy-code-actions",
        "name": "Actions"
      }]
    },
    "menus": {
      "view/title": [{
        "command": "copy-code.copyAllFiles",
        "when": "view == copy-code-actions",
        "group": "navigation"
      }]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
	"package": "vsce package",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
