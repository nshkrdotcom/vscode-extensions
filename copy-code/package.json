{
    "name":  "copy-code",
    "displayName":  "Copy Code",
    "description":  "Copy content from all open files or project files with configurable extensions.",
    "version":  "0.1.29",
    "publisher":  "nshkrdotcom",
    "repository":  {
                       "type":  "git",
                       "url":  "https://github.com/nshkrdotcom/vscode-extensions.git",
                       "directory":  "copy-code"
                   },
    "engines":  {
                    "vscode":  "^1.85.0"
                },
    "categories":  [
                       "Other"
                   ],
    "activationEvents":  [
                             "onStartupFinished",
                             "onCommand:copy-code.copyAllFiles",
                             "onCommand:copy-code.copyAllProjectFiles",
                             "onCommand:copy-code.configureExtensions",
                             "onCommand:copy-code.addCustomCommand"
                         ],
    "main":  "./out/extension.js",
    "icon":  "resources/icon.png",
    "contributes":  {
                        "commands":  [
                                         {
                                             "command":  "copy-code.copyAllFiles",
                                             "title":  "Copy All Open Files",
                                             "category":  "Copy Code",
                                             "icon":  "$(files)"
                                         },
                                         {
                                             "command":  "copy-code.copyAllProjectFiles",
                                             "title":  "Copy All Project Files",
                                             "category":  "Copy Code",
                                             "icon":  "$(gear)"
                                         },
                                         {
                                             "command":  "copy-code.configureExtensions",
                                             "title":  "Configure Extensions",
                                             "category":  "Copy Code",
                                             "icon":  "$(folder)"
                                         },
                                         {
                                             "command":  "copy-code.toggleProjectType",
                                             "title":  "Toggle Project Type",
                                             "category":  "Copy Code"
                                         },
                                         {
                                             "command":  "copy-code.addCustomExtension",
                                             "title":  "Add Custom Extension",
                                             "category":  "Copy Code"
                                         },
                                         {
                                             "command":  "copy-code.addCustomCommand",
                                             "title":  "Add Custom Copy Command",
                                             "category":  "Copy Code"
                                         }
                                     ],
                        "viewsContainers":  {
                                                "activitybar":  [
                                                                    {
                                                                        "id":  "copy-code-view-container",
                                                                        "title":  "Copy Code Actions",
                                                                        "icon":  "resources/icon.png"
                                                                    }
                                                                ]
                                            },
                        "views":  {
                                      "copy-code-view-container":  [
                                                                       {
                                                                           "id":  "copy-code-actions",
                                                                           "name":  "Actions"
                                                                       }
                                                                   ]
                                  },
                        "menus":  {
                                      "view/title":  [
                                                         {
                                                             "command":  "copy-code.copyAllFiles",
                                                             "when":  "view == copy-code-actions",
                                                             "group":  "navigation",
                                                             "icon":  "resources/icon.png"
                                                         }
                                                     ],
                                      "editor/title":  [
                                                           {
                                                               "when":  "resourceScheme == \u0027file\u0027",
                                                               "command":  "copy-code.copyAllFiles",
                                                               "group":  "navigation@10"
                                                           },
                                                           {
                                                               "when":  "resourceScheme == \u0027file\u0027",
                                                               "command":  "copy-code.copyAllProjectFiles",
                                                               "group":  "navigation@11"
                                                           }
                                                       ],
                                      "explorer/context":  [
                                                               {
                                                                   "when":  "isFolder",
                                                                   "command":  "copy-code.copyAllProjectFiles",
                                                                   "group":  "2_workspace@10"
                                                               }
                                                           ]
                                  }
                    },
    "scripts":  {
                    "vscode:prepublish":  "npm run compile",
                    "compile":  "tsc -p ./",
                    "watch":  "tsc -watch -p ./",
                    "pretest":  "npm run compile \u0026\u0026 npm run lint",
                    "lint":  "eslint src --ext ts",
                    "test":  "vscode-test",
                    "package":  "vsce package"
                },
    "dependencies":  {
                         "ignore":  "^5.3.0"
                     },
    "devDependencies":  {
                            "@types/vscode":  "^1.85.0",
                            "@types/mocha":  "^10.0.6",
                            "@types/node":  "20.x",
                            "@typescript-eslint/eslint-plugin":  "^6.15.0",
                            "@typescript-eslint/parser":  "^6.15.0",
                            "eslint":  "^8.56.0",
                            "typescript":  "^5.3.3",
                            "@vscode/test-cli":  "^0.0.4",
                            "@vscode/test-electron":  "^2.3.8"
                        }
}
