{
    "name":  "copy-code",
    "displayName":  "Copy Code",
    "description":  "Copy content from files, including all open files and project files with configurable extensions",
    "version":  "0.1.3",
    "repository":  {
                       "type":  "git",
                       "url":  "https://github.com/nshkrdotcom/vscode-extensions/copy-code"
                   },
    "publisher":  "nshkrdotcom",
    "engines":  {
                    "vscode":  "^1.96.0"
                },
    "categories":  [
                       "Other"
                   ],
    "activationEvents":  [
                             "onCommand:copy-code.copyAllFiles",
                             "onCommand:copy-code.copyAllOpenFiles",
                             "onCommand:copy-code.copyAllProjectFiles",
                             "onCommand:copy-code.configureExtensions"
                         ],
    "main":  "./out/extension.js",
    "icon":  "resources/icon.png",
    "contributes":  {
                        "submenus":  [
                                         "@{id=copy-code-submenu; label=Code Copy Actions}"
                                     ],
                        "commands":  [
                                         "@{command=copy-code.copyAllFiles; title=Copy All Files; icon=$(files)}",
                                         "@{command=copy-code.copyAllProjectFiles; title=Copy Project Files; icon=$(folder)}",
                                         "@{command=copy-code.configureExtensions; title=Configure Extensions; icon=$(settings-gear)}"
                                     ],
                        "menus":  {
                                      "view/title":  "",
                                      "view/title/copy-code-submenu":  "  "
                                  }
                    },
    "scripts":  {
                    "vscode:prepublish":  "npm run compile",
                    "compile":  "tsc -p ./",
                    "watch":  "tsc -watch -p ./",
                    "pretest":  "npm run compile \u0026\u0026 npm run lint",
                    "lint":  "eslint src",
                    "test":  "vscode-test",
                    "package":  "vsce package"
                },
    "devDependencies":  {
                            "@types/vscode":  "^1.96.0",
                            "@types/mocha":  "^10.0.10",
                            "@types/node":  "20.x",
                            "@typescript-eslint/eslint-plugin":  "^8.17.0",
                            "@typescript-eslint/parser":  "^8.17.0",
                            "eslint":  "^9.16.0",
                            "typescript":  "^5.7.2",
                            "@vscode/test-cli":  "^0.0.10",
                            "@vscode/test-electron":  "^2.4.1"
                        }
}
