{
  "name": "copycoder",
  "publisher": "copycoder",
  "displayName": "copycoder",
  "description": "copycoder",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copycoder-sidebar",
          "title": "CopyCoder",
          "icon": "media/copycoder.svg"
        }
      ]
    },
    "views": {
      "copycoder-sidebar": [
        {
          "id": "copycoderConfig",
          "name": "Configuration"
        }
      ]
    },
    "commands": [
      {
        "command": "copycoder.helloWorld",
        "title": "CopyCoder: Hello World"
      },
      {
        "command": "copycoder.configTreeItemClicked",
        "title": "CopyCoder: Handle Config Item"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "copycoder.configTreeItemClicked",
          "when": "view == copycoderConfig"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.4",
    "eslint": "^9.26.0",
    "glob": "^11.0.2",
    "mocha": "^11.2.2",
    "npm-run-all": "^4.1.5",
    "sinon": "^20.0.0",
    "typescript": "^5.8.3",
    "ts-node": "^10.9.2"
  }
}
