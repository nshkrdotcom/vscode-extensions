{
  "name": "@copycoder/vscode-extension",
  "displayName": "Copy Coder NG", // Updated name
  "description": "Enhanced code copying and sharing for VS Code",
  "version": "0.1.0",
  "publisher": "your-publisher-name", // TODO: Update publisher name
  "repository": {
      "type": "git",
      "url": "https://github.com/your-repo/copycoder-ng.git" // TODO: Update repo URL
  },
  "engines": {
      "vscode": "^1.85.0" // Match your target VS Code version
  },
  "categories": [
      "Other"
  ],
  "activationEvents": [
      "onStartupFinished",
      "onCommand:copycoder-ng.copyProject" // Example command
  ],
  "main": "./dist/extension.js", // Entry point after build
  "icon": "resources/icon.png", // TODO: Add an icon file
  "contributes": {
      "commands": [
          {
              "command": "copycoder-ng.copyProject",
              "title": "Copy Project (Copy Coder NG)",
              "category": "Copy Coder NG"
          }
      ]
      // Add other contributions (views, menus, settings) here
  },
  "scripts": {
      "vscode:prepublish": "pnpm run build",
      "build": "tsc -p ./tsconfig.json",
      "watch": "tsc -p ./tsconfig.json -w",
      "lint": "eslint src --ext ts",
      "package": "vsce package --no-dependencies", // Assumes core is built/linked
      "deploy": "vsce publish --no-dependencies"
      // "test": "vscode-test" // Setup tests later
  },
  "dependencies": {
      // Direct runtime dependencies needed ONLY by the extension itself
      // The core logic comes from the linked workspace package
  },
  "devDependencies": {
      "@types/vscode": "^1.85.0",
      "@types/node": "^20.0.0", // Ensure node types match
      "@vscode/test-cli": "^0.0.4",
      "@vscode/test-electron": "^2.3.8",
      "vsce": "^2.15.0" // Or latest vsce
      // Add other extension-specific dev dependencies
  },
  "extensionDependencies": [
      // List VS Code extensions this extension depends on, if any
  ]
}